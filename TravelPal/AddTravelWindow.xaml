<Window x:Class="TravelPal.AddTravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="AddTravelWindow" FontFamily="Arial" FontSize="15"  Height="450" Width="800" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label
            Content="TravelPal"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            Grid.Row="1"
            Grid.RowSpan="2"
            FontSize="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
        <Label
            Content="Add Travel"
            FontSize="20"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
        <Label
            Content="User:"
            Grid.Column="0"
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="30, 0, 5, 0"
            FontSize="12"
            />
        <Label
            x:Name="lblUsername"
            Content="*USERNAME*"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="12"
            />
        <Label
            Content="Number of travelers"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="4"
            VerticalAlignment="Center"
            />
        <Label
            Content="Country"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            VerticalAlignment="Center"
            />
        <Label
            Content="Travel type"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="6"
            VerticalAlignment="Center"
            />
        <Label
            Content="Trip type"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="7"
            VerticalAlignment="Center"
            />
        <Label
            Content="All Inclusive"
            FontSize="12"
            Grid.Column="7"
            Grid.ColumnSpan="2"
            Grid.Row="6"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20, 2, 0, 0"
            />
        <TextBox
            x:Name="tbxNumOfTravelers"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Grid.Row="4"
            Margin="5"
            Height="25"
            VerticalContentAlignment="Center"
            />
        <ComboBox
            x:Name="cbCountries"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Grid.Row="5"
            Margin="5"
            Height="25"
            />
        <ComboBox
            x:Name="cbTravelType"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Grid.Row="6"
            Margin="5"
            Height="25"
            />
        <ComboBox
            x:Name="cbTripType"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Grid.Row="7"
            Margin="5"
            Height="25"
            />
        <CheckBox
            x:Name="cbxAllInclusive"
            Grid.Column="7"
            Grid.Row="6"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="5, 5, 0, 0"
            Height="20"
            Width="20"
            />
        <Button
            x:Name="btnReturn"
            Content="Return"
            Grid.Row="9"
            Grid.Column="9"
            Height="25"
            Width="70"
            HorizontalContentAlignment="Center"
            HorizontalAlignment="Center"
            BorderThickness="2"
            />
    </Grid>
</Window>
